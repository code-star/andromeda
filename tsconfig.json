{
  "compilerOptions": {
    "noErrorTruncation": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "rootDir": "packages",
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true    
  },
  "exclude": [
    ".circleci",
    ".storybook",
    ".storybook-static",
    "node_modules",
    "!node_modules/@types"
  ]
}
